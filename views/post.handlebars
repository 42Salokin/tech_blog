<div class="row mb-5 post-column">
  <div class="col s12 m10 offset-m1">
    <div class="post" data-post-id="{{post.id}}">
      <h2>{{post.title}}</h2>
      <h5>Created by {{post.username}} on {{post.date}}</h5>
      <p>{{post.body}}</p>
      <h5>Comments:</h5>
      {{#if post.comments}}
      {{#each post.comments}}
      <div class="comment">
        <p>{{this.body}}</p>
        <p>Posted by {{this.username}} on {{this.date}}</p>
      </div>
      {{/each}}
      {{else}}
      <p>No comments yet</p>
      {{/if}}
      <a href="#" id="comment">Leave Comment</a>
      <form class="form comment-form">
        <div class="form-group">
          <input class="form-input" type="text" id="comment-text" placeholder="comment">
        </div>
        <div class="form-container">
          <button class="btn btn-primary" id="comment-btn" type="submit">Enter</button>
        </div>
      </form>
    </div>
  </div>
</div>
<script src="/js/comment.js"></script>
